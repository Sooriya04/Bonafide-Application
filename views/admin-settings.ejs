<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Settings</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #fffdf5;
        font-family: 'Roboto', sans-serif;
        margin: 0;
        color: #333;
      }

      /* Header + Navigation */
      header {
        color: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 30px;
      }
      header img {
        width: 260px;
        height: auto;
      }
      header nav a {
        color: #800000;
        text-decoration: none;
        font-weight: bold;
        margin-left: 20px;
        transition: 0.2s;
      }

      .container {
        max-width: 650px;
        margin: 40px auto;
        background: #fff;
        padding: 30px 25px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      }

      h2 {
        text-align: center;
        margin-bottom: 25px;
        color: maroon;
        font-weight: bold;
      }
      .form-label {
        font-weight: 500;
      }
      .btn-primary {
        background-color: maroon;
        border: none;
        font-weight: bold;
        transition: 0.2s;
      }
      .btn-primary:hover {
        background-color: #a83232;
      }

      hr {
        border-top: 1px solid #ccc;
        margin: 40px 0;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        header {
          flex-direction: column;
          align-items: flex-start;
          gap: 10px;
        }
        header nav {
          display: flex;
          gap: 15px;
        }
      }
    </style>
  </head>
  <body>
    <!-- Header + Navigation -->
    <header>
      <img src="/images/tce_logo.png" alt="TCE Logo" />
      <nav>
        <a href="/admin">Admin Home</a>
      </nav>
    </header>

    <div class="container">
      <!-- Monthly Report -->
      <h2>Generate Monthly Report</h2>
      <form id="reportForm">
        <div class="mb-3">
          <label for="monthYear" class="form-label">Select Month & Year</label>
          <input
            type="month"
            class="form-control"
            id="monthYear"
            name="monthYear"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary w-100">
          Generate Report
        </button>
      </form>
    </div>

    <script>
      // Handle report generation
      document
        .getElementById('reportForm')
        .addEventListener('submit', async (e) => {
          e.preventDefault();
          const monthYear = document.getElementById('monthYear').value;
          if (!monthYear) return alert('Please select month & year');
          window.location.href = `/report/${monthYear}`;
        });
    </script>
  </body>
</html>
