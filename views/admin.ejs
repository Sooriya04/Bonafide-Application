<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin – Bonafide Requests</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <style>
      body {
        background-color: #fffdf5;
        font-family: 'Roboto', sans-serif;
        margin: 0;
        color: #333;
      }

      header {
        display: flex;
        align-items: center;
        padding: 10px 30px;
      }

      header img {
        width: 260px;
        height: auto;
      }

      header a {
        margin-left: auto;
        color: maroon;
        font-weight: bold;
        text-decoration: none;
      }

      h2 {
        text-align: center;
        margin: 30px 0 20px;
        color: maroon;
        font-weight: bold;
      }

      .search-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 25px auto 35px;
        gap: 12px;
        flex-wrap: wrap;
      }

      .search-bar input {
        padding: 12px 18px;
        border-radius: 30px;
        border: 1px solid maroon;
        min-width: 240px;
        font-size: 15px;
        outline: none;
        transition: 0.25s;
      }

      .search-bar input:focus {
        border-color: #a83232;
        box-shadow: 0 0 8px rgba(128, 0, 0, 0.25);
      }

      .search-bar button {
        background-color: maroon;
        border: none;
        border-radius: 30px;
        padding: 12px 22px;
        font-size: 15px;
        font-weight: bold;
        color: white;
        cursor: pointer;
        transition: 0.25s;
      }

      .search-bar button:hover {
        background-color: #a83232;
        transform: translateY(-1px);
      }

      .search-bar .reset-btn {
        background-color: maroon;
        border-radius: 30px;
        padding: 12px 20px;
        font-size: 15px;
        text-decoration: none;
        color: #fff;
        font-weight: bold;
        transition: 0.25s;
      }

      .search-bar .reset-btn:hover {
        background-color: #a83232;
      }

      .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 95%;
        margin: 0 auto 20px;
      }

      .info-note {
        color: #6b2b2b;
        font-weight: 500;
        background: #fff4f0;
        padding: 8px 12px;
        border-radius: 10px;
      }

      .table-container {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin: 0 auto 30px;
        max-width: 95%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        overflow-x: auto;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        text-align: center;
      }

      thead {
        background-color: maroon;
        color: white;
      }

      th,
      td {
        padding: 12px 10px;
        border: 1px solid #ddd;
        font-size: 15px;
      }

      tbody tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      .status {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
      }

      .status.pending {
        background: #fff4e6;
        color: #ff8c00;
      }

      .status.approved {
        background: #e6f7ee;
        color: #00a65a;
      }

      .status.rejected {
        background: #ffe6e6;
        color: #ff4d4f;
      }

      .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin: 25px 0 40px;
        gap: 6px;
      }

      .pagination a {
        text-decoration: none;
        color: maroon;
        padding: 6px 12px;
        border: 1px solid maroon;
        border-radius: 8px;
        transition: 0.2s;
      }

      .pagination a.active {
        background-color: maroon;
        color: white;
      }

      .pagination a:hover {
        background-color: #f1e3e3;
      }

      .downloadBtn {
        background-color: #6c5ce7;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        display: inline-flex;
        gap: 8px;
        align-items: center;
      }

      .downloadBtn:hover {
        transform: translateY(-1px);
        opacity: 0.95;
      }

      @media (max-width: 720px) {
        .search-bar {
          padding: 0 12px;
        }

        th, td {
          font-size: 13px;
          padding: 10px 8px;
        }

        header img {
          width: 180px;
        }
      }
    </style>
  </head>

  <body>
    <header>
      <img src="/images/tce_logo.png" alt="TCE Logo" />
      <a href="/admin/settings">⚙️ Admin Settings</a>
    </header>

    <h2>Bonafide Requests</h2>

    <!-- Search form -->
    <form method="GET" action="/admin" class="search-bar">
      <input
        type="text"
        name="rollno"
        value="<%= rollno || '' %>"
        placeholder="Search by Roll No"
      />
      <input
        type="text"
        name="name"
        value="<%= name || '' %>"
        placeholder="Search by Name"
      />
      <button type="submit">Search</button>
      <a href="/admin" class="reset-btn">Reset</a>
    </form>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Action</th>
            <th>Name</th>
            <th>Roll No</th>
            <th>Branch</th>
            <th>Year</th>
            <th>Certificate For</th>
          </tr>
        </thead>
        <tbody>
          <% if (forms && forms.length > 0) { %>
            <% forms.forEach(function(f) { %>
              <tr>
                <td>
                  <button class="downloadBtn" data-id="<%= f.id %>" aria-label="Download bonafide for <%= f.name %>">
                    <i class="fas fa-download"></i> Download
                  </button>
                </td>
                <td><%= f.name %></td>
                <td><%= f.rollno %></td>
                <td><%= f.branch %></td>
                <td><%= f.year %></td>
                <td><%= f.certificateFor %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6">No requests found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <ul class="pagination">
      <% for(let i = 1; i <= totalPages; i++) { %>
      <li>
        <a
          href="/admin?page=<%= i %>&rollno=<%= rollno || '' %>&name=<%= name || '' %>"
          class="<%= i === currentPage ? 'active' : '' %>"
          ><%= i %></a
        >
      </li>
      <% } %>
    </ul>

    <script>
      // Download single .docx per row when button clicked
      document.querySelectorAll('.downloadBtn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
          const id = btn.dataset.id;
          if (!id) return alert('No id found for this record.');

          // give some quick feedback to user
          const originalText = btn.innerHTML;
          btn.disabled = true;
          btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Preparing...';

          try {
            const res = await fetch(`/download/${encodeURIComponent(id)}`);
            if (!res.ok) {
              const text = await res.text().catch(()=>null);
              throw new Error(text || 'Failed to download file.');
            }

            const blob = await res.blob();

            // try to read filename from Content-Disposition
            const cd = res.headers.get('Content-Disposition') || '';
            let filename = 'bonafide.docx';
            const match = cd.match(/filename\*=UTF-8['"]?([^;]+)|filename="([^"]+)"|filename=([^;]+)/i);
            if (match) {
              // filename*=UTF-8''encoded or filename="name"
              filename = decodeURIComponent(match[1] || match[2] || match[3]) || filename;
            }

            // create invisible anchor to download the blob
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            a.remove();
            URL.revokeObjectURL(url);
          } catch (err) {
            console.error(err);
            alert('❌ Error downloading file. See console for details.');
          } finally {
            btn.disabled = false;
            btn.innerHTML = originalText;
          }
        });
      });
    </script>
  </body>
</html>
